{% extends 'base.html.twig' %}


{% block body %}
<div class="container" >
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <h4>{{message}}</h4>
    </div>
{% endfor %}
<h2>Edit dishes</h2>
<div class= "d-flex justify-content-end mb-2"><a class="btn btn-outline-primary" href="{{ path('dish.create') }}">Add dish <i class="fa fa-plus-circle" aria-hidden="true"></i></a></div>
<div class="table-responsive">
    <table class="table table-primary">
        <thead>
            <tr>
                <th scope="col">Order number</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for dish in dishes %}
            <tr class="">
                <td scope="row">{{dish.id}}</td>
                <td><a href="{{ path('dish.show' , {id:dish.id}) }}">{{dish.name}}</a></td>
                <td>{{ dish.description }}</td>
                <td>{{ dish.category }}</td>
                <td>{{ dish.price }}</td>
                <td><a class="btn btn-sm btn-outline-danger" href="{{ path('dish.delete' , {id:dish.id}) }}" role="button">X</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
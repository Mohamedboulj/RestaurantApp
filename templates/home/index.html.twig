{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!-- Hero section -->
	<section class="hero-section">
		<div class="hero-slider owl-carousel">
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{ dish1.name }}</span></h2>
								<p>Try it now, {{dish1.description}} For only {{dish1.price}} $ !</p>
								<a href="{{ path('order',{id:dish1.id}) }}" class="site-btn">Order now</a>
								<a href="{{ path('menu') }}" class="site-btn sb-c2">Menu card</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{ asset('pictures/'~ dish1.picture) }}" alt="">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{ dish2.name }}</span></h2>
								<p>Try it now, {{dish2.description}} For only {{dish2.price}} $ !</p>
								<a href="{{ path('order',{id:dish2.id}) }}" class="site-btn">Order now</a>
								<a href="{{ path('menu') }}" class="site-btn sb-c2">Menu card</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{ asset('pictures/'~ dish2.picture) }}" alt="">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero section end -->
{% endblock %}
